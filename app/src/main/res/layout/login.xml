<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_medium">


    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="348dp"
        android:layout_height="304dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="299dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="220dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/username_in"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/main_light"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/username_in_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:text="Username"
                android:textAppearance="@style/input"
                app:layout_constraintStart_toStartOf="parent"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/password_in"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/main_light"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/password_in_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:text="Password"
                android:textAppearance="@style/input"
                app:layout_constraintStart_toStartOf="parent"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/main_dark"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/login_button_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Log in"
                android:textAppearance="@style/input"
                android:textColor="#BFFFFFFF"
                android:gravity="center_horizontal|center_vertical"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/main_dark"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/register_button_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Register"
                android:textAppearance="@style/input"
                android:textColor="#BFFFFFFF"
                android:gravity="center_horizontal|center_vertical"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
