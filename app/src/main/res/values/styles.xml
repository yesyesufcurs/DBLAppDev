<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="input">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#80FFFFFF</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="input_constraint">
        <item name="android:background">?colorPrimaryVariant</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="button_constraint">
        <item name="android:background">?colorInputBorder</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="text_topbar">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="input_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:hint">Input</item>
        <item name="android:textAppearance">@style/input</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textColorHighlight">?colorOnPrimaryHighlight</item>
        <item name="android:textColorHint">?colorOnPrimaryWeak</item>
    </style>

    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAppearance">@style/input</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="image_button">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">?colorOnPrimary</item>
        <item name="android:backgroundTint">#0000</item>
    </style>
</resources>